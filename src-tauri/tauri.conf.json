{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "micept",
  "version": "0.1.0",
  "identifier": "cn.mirakyux.micept",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "resizable": false,
        "width": 80,
        "height": 200,
        "alwaysOnTop": true

      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}
